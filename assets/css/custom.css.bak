/*Checkbox*/

.custom-checkbox-50{
	display: inline-block; 
	width: 49%;
}

.custom-checkbox div {
  clear: both;
  overflow: hidden;
}

#ppmp_page .custom-checkbox div{
	display: inline-block !important;
	width: 49% !important;
}

#ppmp_page .custom-checkbox input[type="radio"]:hover:not(:checked) ~ label:before,
#ppmp_page .custom-checkbox input[type="checkbox"]:hover:not(:checked) ~ label:before,
#category_page .custom-checkbox input[type="radio"]:hover:not(:checked) ~ label:before,
#category_page .custom-checkbox input[type="checkbox"]:hover:not(:checked) ~ label:before,
#uom_page .custom-checkbox input[type="radio"]:hover:not(:checked) ~ label:before,
#uom_page .custom-checkbox input[type="checkbox"]:hover:not(:checked) ~ label:before
#uacs_page .custom-checkbox input[type="radio"]:hover:not(:checked) ~ label:before,
#uacs_page .custom-checkbox input[type="checkbox"]:hover:not(:checked) ~ label:before {
	text-indent: 9px;
}

#aoq_details_page .custom-checkbox div,
#rfq_page .custom-checkbox div {
	display: inline-block;
	width: 32.333333%;
}

.custom-checkbox label {
  width: 100%;
  border-radius: 3px;
  border: 1px solid #D1D3D4;
  font-weight: normal;
}

#aoq_details_page .custom-checkbox label {
	font-size: 12px;
}

#aoq_details_page .custom-checkbox input[type="radio"]:hover:not(:checked) ~ label:before,
#aoq_details_page .custom-checkbox input[type="checkbox"]:hover:not(:checked) ~ label:before {
	text-indent: 0em;
}


#aoq_details_page .custom-checkbox input[type="radio"]:checked ~ label:before,
#aoq_details_page .custom-checkbox input[type="checkbox"]:checked ~ label:before {
	text-indent: 0em;
}	


.custom-checkbox input[type="radio"]:empty,
.custom-checkbox input[type="checkbox"]:empty {
  display: none;
}

.custom-checkbox input[type="radio"]:empty ~ label,
.custom-checkbox input[type="checkbox"]:empty ~ label {
  position: relative;
  line-height: 2.5em;
  text-indent: 3.25em;  
  cursor: pointer;
  -webkit-user-select: none;
     -moz-user-select: none;
      -ms-user-select: none;
          user-select: none;
}

.custom-checkbox input[type="radio"]:empty ~ label:before,
.custom-checkbox input[type="checkbox"]:empty ~ label:before {
  position: absolute;
  display: block;
  top: 0;
  bottom: 0;
  left: 0;
  content: '';
  width: 2.5em;
  background: #D1D3D4;
  border-radius: 3px 0 0 3px;
}

.custom-checkbox input[type="radio"]:hover:not(:checked) ~ label,
.custom-checkbox input[type="checkbox"]:hover:not(:checked) ~ label {
  /*font-weight: bold;*/
}

.custom-checkbox input[type="radio"]:hover:not(:checked) ~ label:before,
.custom-checkbox input[type="checkbox"]:hover:not(:checked) ~ label:before {
  content: '\2714';
  text-indent: .9px;
  font-weight: bold;
  background: #337ab7;
}

.custom-checkbox input[type="radio"]:checked ~ label,
.custom-checkbox input[type="checkbox"]:checked ~ label {
  color: #777;
}

.custom-checkbox input[type="radio"]:checked ~ label:before,
.custom-checkbox input[type="checkbox"]:checked ~ label:before {
  content: '\2714';
  text-indent: 9px;
  color: #333;
  background-color: #ccc;
}

.custom-checkbox input[type="radio"]:focus ~ label:before,
.custom-checkbox input[type="checkbox"]:focus ~ label:before {
  box-shadow: 0 0 0 3px #999;
}

.custom-checkbox-default input[type="radio"]:checked ~ label:before,
.custom-checkbox-default input[type="checkbox"]:checked ~ label:before {
  color: #333;
  background-color: #ccc;
}

.custom-checkbox-primary input[type="radio"]:checked ~ label:before,
.custom-checkbox-primary input[type="checkbox"]:checked ~ label:before {
  color: #fff;
  background-color: #337ab7;
}


